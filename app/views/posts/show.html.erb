<h3>Do you want to schedule this post?</h3>

<%= link_to "Schedule Post", new_post_calendar_post_path(@post) %>

  <br>

  <div class="container">

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Link</th>
        <th>Finalized</th>
        <th>Picture</th>
        <th>Creator</th>
        <th>Platforms</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>

        <tr>
          <td>@post.title.titleize %></td>
          <td><%= @post.content %></td>
          <td><%= @post.link %></td>
          <td><%= human_boolean(@post.finalized) %></td>
          <td><%= image_tag(@post.picture_url, width: 200) if @post.picture.present? %> </td>
          <td><%= @post.user.name %></td>
          <td>
          <% @post.platforms.each do |platform| %>
          <%= platform.name.titleize %> <br>
          <% end %></td>
          <td><%= link_to 'Edit', edit_post_path(@post) %></td>
          <td><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    </tbody>
  </table>

  <br>

</div>
