<div class="container">
<%= form_for post do |f| %>
<div class="well post-form">
<div class="form-group row">
  <div class="form-field">
    <div class="col-sm-offset-1 col-sm-1">
    <%= f.label :title %>
  </div>
  <div class="col-sm-10">
    <%= f.text_field :title, required: true, class: "form-control"%>
    <small>Title is required.</small>
  </div>
  </div>
</div>

<div class="form-group row">
  <div class="form-field">
    <div class="col-sm-offset-1 col-sm-1">
    <%= f.label :content%>
  </div>
  <div class="col-sm-10">
    <%= f.text_area :content, class: "form-control"%>
  </div>
  </div>
</div>

<div class="form-group row">
  <div class="form-field">
    <div class="col-sm-offset-1 col-sm-1">
    <%= f.label :link %>
  </div>
  <div class="col-sm-10">
    <%= f.text_field :link, class: "form-control" %>
  </div>
</div>
</div>

<div class="form-group row">
  <div class="file-field">
    <div class="col-sm-offset-1 col-sm-1">
    <%= f.label :picture%>
  </div>
  <div class="col-sm-10">
    <%= f.file_field :picture, id: :post_picture%>
  </div>
  </div>
</div>

<div class="form-group row">
  <div class="file-field">
    <div class="col-sm-offset-1 col-sm-1">
    <%= f.label :finalized %>
  </div>
  <div class="col-sm-10">
    <%= f.radio_button :finalized, true%>
    <%= f.label :finalized, "Yes" %>
    <%= f.radio_button :finalized, false %>
    <%= f.label :finalized, "No" %>
  </div>
  </div>
</div>

  <%= f.hidden_field :user_id %> <br>

<div class="form-group row">
  <div class="file-field">
    <h4 class="form-subhead center"><%= f.label :platform, "Social Platforms"%></h4>
    <%= f.collection_check_boxes :platform_ids, Platform.all, :id, :name, :multiple => true%>
</div>
  </div>

<div class="form-group row">
  <div class="form-field">
    <%= f.fields_for :platform_posts_attributes, platform_post do |platform_post| %>

    <h4 class="center"> Or Create a new platform: </h4>
    <div class="col-sm-offset-1 col-sm-1">
    <%= platform_post.label :platform, 'New Platform'%>
  </div>
  <div class="col-sm-10">
    <%= platform_post.text_field :name, class: "form-control"%>
  </div>
  </div>
  <% end %>
</div>

<div class="form-group row">
  <%= f.submit class: "btn btn-primary form-control"%>

  <% end %>
</div>
</div>
