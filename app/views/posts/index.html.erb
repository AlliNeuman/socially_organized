<div class="container">
<div class="container">
  <%= link_to "Finalized", finalized_posts_path, class: 'btn btn-info'%>
  <%= link_to "Drafted", drafted_posts_path, class: 'btn btn-info' %>
</div>

<h1><%= current_user.name %>'s Posts </h1>


<div class="container">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Finalized</th>
        <th>Picture</th>
        <th>Platforms</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>

      <tr>
        <% @posts.each do |post| %>
        <tr>
        <td><%=link_to post.title.titleize, post_path(post) %></td>
        <td><%= human_boolean(post.finalized) %></td>
        <td><%= image_tag(post.picture_url, width: 200) if post.picture.present? %> </td>
        <td>
          <% post.platforms.each do |platform| %>
          <%= platform.name.titleize %> <br>
          <% end %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
</div>
